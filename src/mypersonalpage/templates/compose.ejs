<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="item" action="/compose" method="POST">
    <div class="form-group">
      <label for="TitleInput">Title</label>
      <input type="text" class="form-control" id="TitleInput" placeholder="" name="Title">
    </div>
    <div class="form-group">
      <label for="TextAreaInput">Post</label>
      <textarea class="form-control" id="TextAreaInput" rows="3" name="Text"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="list">Publish</button>
  </form>

<%- include('partials/footer'); -%>